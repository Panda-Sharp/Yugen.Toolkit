<Page x:Class="Yugen.Toolkit.Uwp.Samples.Views.Mvvm.CommandPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Yugen.Toolkit.Uwp.Samples.Views.Mvvm"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodel="using:Yugen.Toolkit.Uwp.Samples.ViewModels.Mvvm"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <viewmodel:CommandViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <StackPanel>
        <TextBlock Text="{x:Bind ViewModel.Text, Mode=OneWay}" />

        <Button Command="{x:Bind ViewModel.ButtonCommand}"
                Content="Show Text" />

        <Button Command="{x:Bind ViewModel.ButtonAsyncCommand}"
                Content="Show Dialog" />
    </StackPanel>
</Page>
