<Page x:Class="Yugen.Toolkit.Uwp.Samples.Views.Mvvm.NavigationParameterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodel="using:Yugen.Toolkit.Uwp.Samples.ViewModels.Mvvm"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      Loaded="{x:Bind ViewModel.Page_Loaded}">
    <!--DataContext="{x:Bind viewmodel:NavigationParameterViewModel}"-->

    <Page.DataContext>
        <viewmodel:NavigationParameterViewModel x:Name="ViewModel"/>
    </Page.DataContext>
    
    <Grid>
        <TextBlock Text="{x:Bind ViewModel.Text, Mode=OneWay}"/>

        <Button Content="{x:Bind ViewModel.ButtonContent}" Tapped="{x:Bind ViewModel.Button_Tapped}"/>
    </Grid>
</Page>
