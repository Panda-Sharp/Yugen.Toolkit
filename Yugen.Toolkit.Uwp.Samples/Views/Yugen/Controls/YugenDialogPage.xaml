<Page x:Class="Yugen.Toolkit.Uwp.Samples.Views.Yugen.Controls.YugenDialogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Yugen.Toolkit.Uwp.Samples.Views.Yugen.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Spacing="8">
        <Button Command="{x:Bind ViewModel.YugenDialogNoButtonsCommand}"
                Content="Show Yugen Dialog NoButtons" />

        <Button Command="{x:Bind ViewModel.YugenDialogOneButtonCommand}"
                Content="Show Yugen Dialog OneButton" />

        <Button Command="{x:Bind ViewModel.YugenDialogTwoButtonsCommand}"
                Content="Show Yugen Dialog TwoButtons" />

        <Button Command="{x:Bind ViewModel.MyDialogCommand}"
                Content="Show My Dialog" />
    </StackPanel>
</Page>